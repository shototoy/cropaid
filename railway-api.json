{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "install": {
          "cmds": ["cd server && npm install"]
        }
      },
      "start": "cd server && node index.js"
    }
  },
  "deploy": {
    "startCommand": "cd server && node index.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
